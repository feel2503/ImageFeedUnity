<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme_NoTitle" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Widget.CameraView" parent="android:Widget">
        <item name="android:adjustViewBounds">false</item>
        <item name="facing">back</item>
        <item name="aspectRatio">4:3</item>
        <item name="autoFocus">true</item>
        <item name="flash">auto</item>
    </style>

    <declare-styleable name="crop__CropperView">
        <attr name="crop__grid_color" format="color"/>
        <attr name="crop__grid_thickness" format="dimension"/>
        <attr name="crop__grid_opacity" format="float"/>
        <attr name="crop__padding_color" format="color"/>
        <attr name="crop__add_padding_to_make_square" format="boolean"/>
        <attr name="crop__fit_to_center" format="boolean"/>
    </declare-styleable>


    <declare-styleable name="CropView">
        <!-- Viewport ratio used to compute height based off view width -->
        <attr name="cropviewViewportRatio" format="float" />
        <!-- Viewport overlay color -->
        <attr name="cropviewViewportOverlayColor" format="color" />
        <!-- Viewport overlay padding -->
        <attr name="cropviewViewportOverlayPadding" format="dimension" />
        <!-- Maximum zoom level -->
        <attr name="cropviewMaxScale" format="float" />
        <!-- Minimum  zoom level -->
        <attr name="cropviewMinScale" format="float" />
        <!-- Shape -->
        <attr name="cropviewShape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
        </attr>
    </declare-styleable>

</resources>
